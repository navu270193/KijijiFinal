<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context="com.navu.kijijifinal.MainActivity">



    <ScrollView
        android:layout_width="395dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="-59dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_weight="0.24"
                    android:paddingTop="10dp"
                    android:text="City of Montreal"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/location1" />


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="235dp"
                android:layout_height="110dp"
                android:layout_marginLeft="70dp"
                app:srcCompat="@drawable/logo" />

            <SearchView
                android:layout_width="352dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:background="@android:color/background_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:background="@android:color/holo_orange_dark"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.04"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:text="Post an ad!"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="?attr/colorPrimary"
                android:text="Browse Categories"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="354dp"
                android:layout_height="442dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/background_light"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ads Nearby" />

                <LinearLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="174dp"
                        android:layout_height="143dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        app:srcCompat="@drawable/a" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="136dp"
                        android:layout_height="143dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.39"
                        app:srcCompat="@drawable/b" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="162dp"
                        android:layout_height="146dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.16"
                        app:srcCompat="@drawable/d" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/c" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="373dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/darker_gray"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="156dp"
                        android:layout_weight="0.34"
                        android:text="View All"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="413dp"
        android:layout_height="68dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="590dp">


        <LinearLayout
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="0.25"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_weight="0.25"
                android:text="Home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/MyKijiji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Kijiji" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.01"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:text="Post" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_weight="0.14"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/fav" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="Favourites" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_weight="0.22"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/message" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="Message" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
